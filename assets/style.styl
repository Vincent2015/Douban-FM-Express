$width = 350px;
$red = #ff4e5f;
body{
  margin: 0;
  padding: 0;
  border: 1px solid #333333
}

#player{
  margin-top: 10px;
  height: 10px;
}

/* UI component */

audio{
  display: none;
}
progress::-webkit-progress-value{
  background: #dddddd;
  height: 10px;
  border-radius: 5px;
}
progress::-webkit-progress-bar{
  background: transparent;
  height: 10px;
  border-radius: 5px;
}
progress{
  -webkit-appearance: none;
  border-radius: 5px;
  overflow: hidden;
  height: 10px;
  width: 100%;
  display: block;
  margin: 0;
  padding: 0;
}
progress.player-progress-played{
  z-index: 999;
  width: 99%;
  padding: 0 0.5%;
}
progress.player-progress-buffer{
  z-index: 998;
  width: 99%;
  padding: 0 0.5%;
}
progress.player-progress-buffer::-webkit-progress-bar{
  background-color: #ffffff;
}
progress.player-progress-played::-webkit-progress-value{
  background: $red;
  height: 10px;
  border-radius: 5px 0 0 5px;
}
input[data-player="seek"]{
  display block
  width: 100%;
  -webkit-appearance: none;
  background: transparent;
  border-radius: 5px;
  height: 10px;
  margin: 0;
  outline: none;
}
input[data-player="volume"]{
  position: absolute;
  bottom: 40px;
  right: 20px;
  width: 30px;
  -webkit-appearance: none;
  background-color: #EEE;
  background-image: -moz-linear-gradient($red, $red);
  background-image: -webkit-linear-gradient($red, $red);
  background-image: linear-gradient($red, $red);
  background-size: 0 100%;
  background-repeat: no-repeat;
  border-radius: 5px;
  height: 5px;
  margin: 0;
  outline: none;
  transform: rotate(-90deg);
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  background-color: $red;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 2px solid white;
  cursor: pointer;
  transition: .3s ease-in-out;
}â€‹
 input[type="range"]:not(.player-volume)::-webkit-slider-thumb:hover {
   background-color: white;
   border: 2px solid $red;
   transform: scale(1.3)
 }
 input[type="range"]:not(.player-volume)::-webkit-slider-thumb:active {
   transform: scale(1.5);
 }

input.player-volume[type=range]::-webkit-slider-thumb {
  border-radius: 50%;
  border-width 0;
  width: 5px;
  height: 5px;
}

input[data-player="captions"],
.icon-captions-on,
.icon-captions-on + svg,
.sr-only,
button[data-player="fullscreen"],
button[data-player="restart"],
button[data-player="rewind"],
button[data-player="play"],
button[data-player="pause"],
button[data-player="fast-forward"],
input[data-player="mute"] + label{
  display: none;
}

@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg); }

  to {
    -webkit-transform: rotate(359deg); } }

@keyframes rotation {
  from {
    transform: rotate(0deg); }

  to {
    transform: rotate(359deg); } }

/* icon */

.icon {
  display: inline-block;
  width: 1em;
  height: 1em;
  fill: currentColor;
}

.wrapper{
  position: relative;
  width: 350px;
  margin: 0 auto;
  transition: width 0.3s;
  &.open{
    width: 550px;
    .sidebar{
      box-shadow: 0 0 50px rgba(0, 0, 0, 0.6);
    }
  }
}

/* Main  */

.main{
  position: absolute;
  top: 50px;
  right 0;
  overflow: hidden;
  display: block;
  width: 350px;
  height: 450px;
  background: #333333;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  box-shadow: 0 0 50px rgba(0, 0, 0, 0.6);
}

 /* Sidebar */

.sidebar{
  position: absolute;
  left: 0
  top: 70px
  width: 200px;
  padding-right: 10px;
  min-height 410px;
  background: #333333
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  box-shadow: 0 0 0 rgba(0, 0, 0, 0.6);
  z-index: -1;
  .loading{
    color: #ffffff;
    width: 100px;
    height: 100px;
    font-size 100px;
    margin: 100px auto;
    svg{
      -webkit-animation: rotation 1s infinite linear;
    }
  }
}
.menu, .info, .close{
  display block
  position: absolute
  top: 5px
  color: #dddddd;
  font-size: 32px;
  cursor: pointer
  z-index: 900;
  -webkit-app-region: no-drag;
}
.close{
  right: 0;
  top: 0;
  font-size: 16px;
  width: 32px;
  height: 32px;
  color: #333333;
  opacity: 1;
  transition: all 0.3s
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  svg {
    display: block;
    margin: 8px auto;
  }
  &:hover{
    transform: scale(1.3);
    color: #FFFFFF;
    background: #000;
  }
  &:active{
    transform: scale(0.5)
  }
}
.menu, .info{
  top: 20px;
  left: 20px;
  color: #ccc;
  width: 32px;
  height: 32px;
  opacity 0
  transition: all 0.3s
  .album:hover & {
    opacity 1
  }
  &:hover{
    color: #ffffff
  }
}
.info{
  left: initial
  right: 20px
  top: initial
  bottom: 20px
}

.album{
  overflow: hidden;
  width: 100%;
  height: 350px;
  position: relative;
  -webkit-border-radius: 0 0 5px 5px
  -moz-border-radius: 0 0 5px 5px
  border-radius: 0 0 5px 5px
  &:after{
    display block
    content: ""
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute
    top: 0
    left: 0
    background: rgba(0, 0, 0, 0.5)
    opacity: 0;
    transition opacity 0.3s
  }
  &:hover{
    &:after{
      opacity 1
    }
  }
}
.album img{
  display: block;
  width: 100%;
}

.player-controls{
  *{
    -webkit-app-region: no-drag;
  }
  .player-progress{
    position: relative;
    height: 10px;
    width: $width - 30px;
    margin: 0 15px;
    margin-top: 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }
  .player-time{
    position: absolute
    top: 300px;
    left: 20px;
    color: #ffffff;
    font-size: 16px;
    font-family: "Avenir Next";
  }
}

.player-progress input{
  position: absolute;
  top: 0;
  z-index: 1000;
}

.player-progress progress{
  position: absolute;
  top: 0;
}

.controls{
  font-size: 36px;
  color: #ffffff;
  text-align: center;
  margin-top: 15px;
  > div.icon{
    /* Disable Drag */
    -webkit-app-region: no-drag;
    color: #dddddd
    transition: color 0.3s
    margin: 0 5px;
    &.play{
      display: inline-block;
    }
    &.pause{
      display: none;
    }

    &.heart{
      position relative
      svg {
        display: block;
        top: 0;
        position: absolute;
        left: 0;
        transition opacity 0.3s;
      }
      &:hover{
        color: $red;
      }
      .player.like + & {
        color: $red;
        .icon-heart-broken{
          display: block;
        }
        &:hover{
          .icon-heart{
            opacity 0
          }
        }
      }
    }

    &.unheart{
      display: none;
    }
    &:hover{
      color: #ffffff;
    }
  }
}

.player.playing + .controls{
  .icon.play{
    display: none;
  }
  .icon.pause{
    display: inline-block;
  }
}
